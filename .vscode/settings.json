{
  "editor.fontSize": 16,
  "editor.rulers": [50, 60, 80],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#ff4081"
  },
  "editor.codeLens": true,
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "/Applications/Firefox Developer Edition.app/Contents/MacOS/firefox --start-debugger-server",
  "liveServer.settings.ignoreFiles": [
    ".vscode/**",
    "**/*.scss",
    "**/*.sass",
    "**/*.ts"
  ],
  "cSpell.language": ",es",
  "cSpell.words": [
    "s√≠ncrono"
  ]
}
